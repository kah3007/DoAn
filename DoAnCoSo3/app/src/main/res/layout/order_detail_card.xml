<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="FoodObject"
            type="com.example.doancoso3.data.entity.Food" />
        <variable
            name="OrderDetailObject"
            type="com.example.doancoso3.data.entity.OrderDetail" />
        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/orderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivFood"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quantity"
                android:layout_margin="5dp"
                tools:ignore="ContentDescription,ImageContrastCheck"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:id="@+id/rlOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvFoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{FoodObject.foodName}"
                        android:textSize="14sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{`Số lượng: `+ OrderDetailObject.quantity}"
                        android:textSize="14sp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOne"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tvRestaurantRating"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="13dp"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="10dp"
                        android:text="@{(OrderDetailObject != null ? `Giá: `+Float.toString(OrderDetailObject.pricePerUnit) +`00đ`: ``)}"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="17sp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
