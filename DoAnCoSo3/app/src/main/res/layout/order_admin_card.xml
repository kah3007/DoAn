<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="User"
            type="com.example.doancoso3.data.entity.User" />
        <variable
            name="OrderObject"
            type="com.example.doancoso3.data.entity.Order" />
        <variable
            name="ManageOrderViewModel"
            type="com.example.doancoso3.ui.viewmodel.ManageOrderViewModel" />
        <variable
            name="RevenueViewModel"
            type="com.example.doancoso3.ui.viewmodel.RevenueViewModel" />
        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/orderAdminCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivRestaurant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quantity"
                android:layout_margin="5dp"
                tools:ignore="ContentDescription,ImageContrastCheck"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:id="@+id/rlOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvFoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{`Người đặt: `+ User.username}"
                        android:textSize="12sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{`Tổng tiền: `+ OrderObject.totalPrice+`00đ`}"
                        android:textSize="12sp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOne"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tvTimeOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{ManageOrderViewModel != null ? `Được đặt lúc: ` + ManageOrderViewModel.getTimeOrderText(OrderObject) : (RevenueViewModel != null ? `Được đặt lúc: ` + RevenueViewModel.getTimeOrderText(OrderObject) : ``)}"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tvDateOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@{ManageOrderViewModel != null ? `Ngày đặt: `+ ManageOrderViewModel.getDateOrderText(OrderObject) : (RevenueViewModel != null ? `Ngày đặt: ` + RevenueViewModel.getDateOrderText(OrderObject) : ``)}"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="6dp"
                        app:cardBackgroundColor="@color/product_detail_item"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="15dp">
                        <TextView
                            android:id="@+id/orderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="@{ManageOrderViewModel != null ? ManageOrderViewModel.getButtonActionText(OrderObject) : RevenueViewModel != null ? RevenueViewModel.getButtonActionText(OrderObject) : ``}"
                            android:textSize="14sp"
                            android:textAlignment="center" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
